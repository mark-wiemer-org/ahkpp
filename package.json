{
	"name": "vscode-autohotkey-plus",
	"displayName": "AutoHotkey Plus",
	"description": "AutoHotkey language support for VS Code",
	"version": "2.1.6",
	"publisher": "cweijan",
	"engines": {
		"vscode": "^1.30.0"
	},
	"activationEvents": [
		"onLanguage:ahk"
	],
	"main": "./out/extension",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"license": "SEE LICENSE IN LICENSE.md",
	"icon": "icon.png",
	"bugs": {
		"url": "https://github.com/cweijan/vscode-autohotkey/issues"
	},
	"homepage": "https://github.com/cweijan/vscode-autohotkey/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/cweijan/vscode-autohotkey.git"
	},
	"galleryBanner": {
		"color": "#5c2d91",
		"theme": "dark"
	},
	"keywords": [
		"vscode",
		"autohotkey",
		"ahk"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "ahk"
			}
		],
		"debuggers": [
			{
				"type": "ahk",
				"label": "Autohotkey",
				"program": "./out/debugger/DebugAdapter.js",
				"runtime": "\"C:\\Program Files\\Autohotkey\\AutoHotkeyU64.exe\"",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${file}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ahk",
						"request": "launch",
						"name": "Autohotkey Debugger",
						"program": "${file}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Autohotkey Debug: Launch",
						"body": {
							"type": "ahk",
							"request": "launch",
							"name": "Autohotkey Debugger",
							"program": "${file}",
							"stopOnEntry": true
						}
					}
				]
			}
		],
		"languages": [
			{
				"id": "ahk",
				"aliases": [
					"AutoHotkey",
					"autohotkey",
					"ahk"
				],
				"extensions": [
					".ahk",
					".ext"
				],
				"configuration": "./ahk.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ahk",
				"scopeName": "source.ahk",
				"path": "./syntaxes/ahk.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "run.ahk",
				"title": "Run Ahk Script.",
				"category": "AHK",
				"icon": {
					"light": "image/run.png",
					"dark": "image/run-dark.png"
				}
			},
			{
				"command": "run.ahk.config",
				"title": "Config Ahk Execute Bin Path."
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "run.ahk",
					"when": "editorLangId == ahk",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "run.ahk",
					"when": "editorLangId == ahk",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "run.ahk",
				"key": "f9",
				"when": "editorLangId == ahk"
			}
		],
		"snippets": [
			{
				"language": "ahk",
				"path": "./snippets/ahk.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"tslint": "tslint -t verbose src/**/*.ts"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.40.0-pre.1"
	},
	"devDependencies": {
		"vscode": "^1.1.34",
		"@types/node": "^8.10.25",
		"tslint": "^5.15.0",
		"typescript": "^3.4.3"
	}
}
