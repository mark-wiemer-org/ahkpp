// https://code.visualstudio.com/docs/editor/tasks#vscode
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "npm",
            "script": "build:dev",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "Build start"
                        },
                        "endsPattern": {
                            "regexp": "Build success"
                        }
                    }
                }
            ]
        }
    ]
}
